@model RegisterRequestDto

<div class="register-form">
    <section class="py-3 py-md-5 py-xl-8 login-background">
        <div class="container pb-3">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2 class="display-5 fw-bold">Sign Up</h2>
                    <p>
                        Already have an account?
                        <a asp-controller="Authorize" asp-action="Login" class="text-decoration-underline">Log In</a>
                    </p>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-12 col-lg-6">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        <div class="row gy-3 overflow-hidden">
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input asp-for="FullName" class="form-control border-0 border-bottom rounded-0" placeholder="Full name" />
                                    <label asp-for="FullName"><i class="bi bi-person"></i> Full Name</label>
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input asp-for="Email" class="form-control border-0 border-bottom rounded-0" placeholder="name@example.com" />
                                    <label asp-for="Email"><i class="bi bi-envelope"></i> Email</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="d-grid">
                                    <button class="btn btn-primary btn-lg" type="submit">Continue with Email</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
