@model VerifyOTPRequestDto

<div class="verify-otp-form">
    <section class="py-3 py-md-5 py-xl-8 login-background">
        <div class="container pb-3">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2 class="display-5 fw-bold">Xác minh OTP</h2>
                    <p>Chúng tôi đã gửi mã xác minh đến <strong>@Model.Email</strong></p>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-12 col-lg-6">
                    <form asp-action="VerifyOtp" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="Email" />

                        <div class="form-floating mb-3">
                            <input asp-for="OTP" class="form-control border-0 border-bottom rounded-0" placeholder="Mã OTP" />
                            <label asp-for="OTP"><i class="bi bi-shield-lock"></i> Mã OTP</label>
                            <span asp-validation-for="OTP" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-success btn-lg" type="submit">Xác minh</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
