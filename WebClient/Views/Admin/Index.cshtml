@model BusinessObject.DTOs.Admin.StaticDto
@{
    ViewData["Title"] = "Admin Dashboard";

    var avgRating = Model.AvgRating;
    var userCount = Model.UserCount;
    var totalOrdersMonthly = Model.TotalOrdersMonth;
    var earningsMonth = Model.EarningsMonth;
    var totalPrice = Model.TotalPricesEachMonth ?? new List<double>();
    var categoryNames = Model.CategoriesName ?? new List<string>();
    var totalQuantities = Model.TotalQuantity ?? new List<int>();

    var currentYear = DateTime.Now.Year;
    var years = new List<SelectListItem>();
    for (int i = currentYear - 4; i <= currentYear; i++)
    {
        years.Add(new SelectListItem { Value = i.ToString(), Text = i.ToString(), Selected = i == currentYear });
    }
}
<div class="admin-margin">
    <div class="container mt-5">
        <div class="row">
            <!-- Total Orders Monthly -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-uppercase mb-1 text-primary">
                                    Total Orders (Month)
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@totalOrdersMonthly</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-truck fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Earnings (Month) -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Earnings (Month)
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    @String.Format("{0:N0} VND", earningsMonth)
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-money-bill-wave fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Total Users -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                    Total Users
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@userCount</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-users fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Feedback -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                    Feedback (Avg Stars)
                                </div>
                                <div class="row no-gutters align-items-center">
                                    <div class="col-auto">
                                        <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@avgRating</div>
                                    </div>
                                    <div class="col">
                                        <div class="progress progress-sm mr-2">
                                            <div class="progress-bar bg-warning" role="progressbar"
                                                 style="width:@(avgRating / 5 * 100)%"
                                                 aria-valuenow="@(avgRating / 5 * 100)" aria-valuemin="0" aria-valuemax="100">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-star fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts -->
        <div class="row">
            <!-- Area Chart -->
            <div class="col-md-8 col-lg-7">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Earnings Overview</h6>
                        <div class="dropdown">
                            <form id="yearForm" method="get" asp-controller="Admin" asp-action="Index">
                                <select id="yearSelector" name="year" class="form-control" onchange="this.form.submit()">
                                    @foreach (var year in years)
                                    {
                                        <option value="@year.Value" selected="@year.Selected">@year.Text</option>
                                    }
                                </select>
                            </form>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="chart-area">
                            <canvas id="myAreaChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pie Chart -->
            <div class="col-md-4 col-lg-5">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Revenue Sources</h6>
                    </div>
                    <div class="card-body">
                        <div class="chart-pie pt-4 pb-2">
                            <canvas id="myPieChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- end container -->
</div> <!-- end admin-margin -->


<!-- Content Row -->
<style>
    .card.shadow.mb-4 {
        min-height: 500px;
        display: flex;
        flex-direction: column;
    }

    .card-body {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }

    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }

    .border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }

    .border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }
</style>
@section Scripts {
    <script>
        var totalPriceData = @Html.Raw(Json.Serialize(Model.TotalPricesEachMonth));
        var ctx1 = document.getElementById("myAreaChart").getContext("2d");
        var myAreaChart = new Chart(ctx1, {
            type: "line",
            data: {
                labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"],
                datasets: [{
                    label: "Earnings (VND)",
                    data: totalPriceData,
                    backgroundColor: "rgba(78, 115, 223, 0.2)",
                    borderColor: "rgba(78, 115, 223, 1)",
                    borderWidth: 2,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: { grid: { display: false } },
                    y: { beginAtZero: true }
                }
            }
        });

        var labels = @Html.Raw(Json.Serialize(Model.CategoriesName));
        var data = @Html.Raw(Json.Serialize(Model.TotalQuantity));
        var ctx2 = document.getElementById("myPieChart").getContext("2d");
        var myPieChart = new Chart(ctx2, {
            type: "doughnut",
            data: {
                labels: labels,
                datasets: [{
                    data: data,
                    backgroundColor: ["#FF6B6B", "#4D96FF", "#F9C74F", "#90BE6D", "#F94144"]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    </script>
}

